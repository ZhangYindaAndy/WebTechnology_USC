<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="@color/colorCard">

        <ImageView
            android:id="@+id/dialog_image"
            android:layout_width="300dp"
            android:layout_height="160dp"
            android:scaleType="fitXY"
            />

        <TextView
            android:id="@+id/dialog_title"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/dialog_image"
            android:layout_margin="10dp"
            android:text="News Title"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold"
            android:scrollHorizontally="true"
            android:ellipsize="end"
            android:maxLines="3" />

        <View
            android:id="@+id/h_line"
            android:layout_width="300dp"
            android:layout_height="2dp"
            android:layout_below="@id/dialog_title"
            android:background="@color/colorTabText"/>

        <ImageView
            android:id="@+id/dialog_twitter"
            android:layout_below="@id/h_line"
            android:layout_width="149dp"
            android:layout_height="50dp"
            android:src="@mipmap/ic_twitter"/>

        <View
            android:id="@+id/v_line"
            android:layout_width="2dp"
            android:layout_height="50dp"
            android:layout_below="@id/h_line"
            android:layout_toRightOf="@id/dialog_twitter"
            android:background="@color/colorTabText"/>

        <ImageView
            android:id="@+id/dialog_bookmark"
            android:layout_width="149dp"
            android:layout_height="50dp"
            android:layout_below="@id/h_line"
            android:layout_toRightOf="@id/v_line"
            android:src="@drawable/ic_bookmark_border_24px"/>

    </RelativeLayout>

</RelativeLayout>